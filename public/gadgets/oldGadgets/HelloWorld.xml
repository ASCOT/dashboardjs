<?xml version="1.0" encoding="UTF-8" ?> 
<Module>
  <ModulePrefs title="Hello World"> 
    <Require feature="minimessage"/>
    <Require feature="settitle"/>
  </ModulePrefs>
  <Content type="html">
     <![CDATA[ 
            <script type="text/javascript">
                gadgets.window.setTitle("Gadget Title");
                var msg = new gadgets.MiniMessage(__MODULE_ID__);
                msg.createDismissibleMessage("I'm a dismissible message");
            </script>
            <div>Hello World. I'm a trivial gadget</div>
     ]]>
  </Content> 
</Module>
